<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InserirCategoriasServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.categoria.InserirCategoriasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarCategoriaServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.categoria.ListarCategoriaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispacheServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.DispacheServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarAdministradorServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.administrador.DeletarAdministradorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizarAdministradorServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.administrador.AtualizarAdministradorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarUsuarioServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.cliente.DeletarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizarUsuarioServlet</servlet-name>
        <servlet-class>br.com.smd.ecommerce.controlador.cliente.AtualizarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InserirCategoriasServlet</servlet-name>
        <url-pattern>/InserirCategoriasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarCategoriaServlet</servlet-name>
        <url-pattern>/ListarCategoriaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DispacheServlet</servlet-name>
        <url-pattern>/DispacheServlet</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarAdministradorServlet</servlet-name>
        <url-pattern>/admin/deletarAdministrador.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizarAdministradorServlet</servlet-name>
        <url-pattern>/admin/atualizarAdministrador.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarUsuarioServlet</servlet-name>
        <url-pattern>/deletarUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizarUsuarioServlet</servlet-name>
        <url-pattern>/atualizarUsuario.do</url-pattern>
    </servlet-mapping>
</web-app>
